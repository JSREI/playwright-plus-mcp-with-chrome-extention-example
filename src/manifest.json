{
  "manifest_version": 3,
  "name": "Playwright Plus MCP Chrome Extension Example",
  "version": "1.0.0",
  "description": "在所有页面上显示一个占满屏幕的圆形，里面有一个大大的对号",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Playwright Plus MCP Chrome Extension Example",
    "default_popup": "popup.html"
  }
} 